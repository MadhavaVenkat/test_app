
  <h1  class="text-center">Users</h1>
  <div class="container mt-4" > 


    <p id="notice"><%= notice %></p>



    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody  class="">
        <% @users.each do |user| %>
          <tr >
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', user ,class:"btn btn-outline-secondary" %></td>
            <td><%= link_to 'Edit', edit_user_path(user) ,class:"btn btn-outline-success" %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <p class="text-center"> <%= link_to 'New User', new_user_path, class: "btn btn-outline-primary"  %> </p>
  </div>
